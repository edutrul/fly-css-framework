extends _layout.pug
include _mixins
block content
	article.fy-bx
		+title('Icon')
		+resume
			p Usefull icon using the library <a href="https://fontawesome.com/icons?d=gallery&m=free" target="_blank">FontAwesome</a> 

		//- spec
		+section
			+subtitle('Usage')
			+description
				p Add the stylesheet <code>font-awesome.css</code>
				p Load the folder <code>fonts</code> inside your proyect
			+demo
				+example.
					<link rel="stylesheet" href="css/font-awesome.css">
				+code.
					<link rel="stylesheet" href="css/font-awesome.css">

		//- spec
		+section
			+subtitle('Example')
			+description
			+demo
				+example.
					<div class="fy-ic"><i class="fas fa-save"></i></div>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
				+code.
					<div class="fy-ic"><i class="fas fa-save"></i></div>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
				+open_example('icon')

		//- spec
		+section
			+subtitle('Sizes')
			+description
			+properties([{'r':'-xs','d':'Extra small'},{'r':'-s','d':'Small'},{'r':'-l','d':'Large'},{'r':'-xl','d':'Extra large'}])
			+demo
				+example.
					<button class="fy-ic -xs"><i class="fas fa-save"></i></button>
					<button class="fy-ic -s"><i class="fas fa-save"></i></button>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
					<button class="fy-ic -l"><i class="fas fa-save"></i></button>
					<button class="fy-ic -xl"><i class="fas fa-save"></i></button>
				+code.
					<button class="fy-ic -xs"><i class="fas fa-save"></i></button>
					<button class="fy-ic -s"><i class="fas fa-save"></i></button>
					<button class="fy-ic"><i class="fas fa-save"></i></button>
					<button class="fy-ic -l"><i class="fas fa-save"></i></button>
					<button class="fy-ic -xl"><i class="fas fa-save"></i></button>
				+open_example('icon')


		//- spec
		+section
			+subtitle('Rounded')
			+description
			+properties([{'r':'-r','d':'Rounded'}])
			+demo
				+example.
					<div class="fy-ic -r"><i class="fas fa-save"></i></div>

				+code.
					<div class="fy-ic -r"><i class="fas fa-save"></i></div>
				+open_example('icon')

