extends _layout.pug
include _mixins
block content
	article.fy-bx
		+title('Grid flex')
		+resume
		
		//- spec
		+section
			+subtitle('usage')
			+description
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div>
								Fixed column
							</div>
							<div class="fy-fxg ">
								Responsive column
							</div>
						</div> 
				+code.
					<div class="fy-fx">
						<div>
							Fixed column
						</div>
						<div class="fy-fxg ">
							Responsive column
						</div>
					</div>
				+open_example('grid-flex')


		//- spec
		+section
			+subtitle('Columns')
			+description
				p Grid flex has two columns. The element with the class <code class="fy-cd">fy-fxg</code> is the responsive and the other <code class="fy-cd">div</code> has a width based on its content
			
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div>
								Fixed column
							</div>
							<div class="fy-fxg ">
								Responsive column
							</div>
						</div>
						<div class="fy-fx">
							<div class="fy-fxg ">
								Responsive column
							</div>
							<div>
								Fixed column
							</div>
						</div>		
				+code.
					<div class="fy-fx">
						<div>
							Fixed column
						</div>
						<div class="fy-fxg ">
							Responsive column
						</div>
					</div>
					<div class="fy-fx">
						<div class="fy-fxg ">
							Responsive column
						</div>
						<div>
							Fixed column
						</div>
					</div>


		
		//- spec
		+section
			+subtitle('responsive')
			+description
				p Add the modifier <code class="fy-codl">fy-fx[@s|@m|@l]</code> to active the flex
			+properties([{'r':'fy-fx','d':'The grid flex is active all screen sizes'},{'r':'fy-fx@s','d':'The grid flex is active when the screen > 560px'},{'r':'fy-fx@m','d':'The grid flex is active when the screen > 768px'},{'r':'fy-fx@l','d':'The grid flex is active when the screen > 980px'}])
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx@l">
							<div>
								Flex for screen > 980
							</div>
							<div class="fy-fxg">
								Responsive column
							</div>
						</div>
						
						<div class="fy-fx@m">
							<div>
								Flex for screen > 980
							</div>
							<div class="fy-fxg">
								Responsive column
							</div>
						</div>
				+code.
					<div class="fy-fx@l">
						<div>
							Flex for screen > 980
						</div>
						<div class="fy-fxg">
							Responsive column
						</div>
					</div>
					
					<div class="fy-fx@m">
						<div>
							Flex for screen > 980
						</div>
						<div class="fy-fxg">
							Responsive column
						</div>
					</div>
				+open_example('grid-flex-responsive')

		//- spec
		+section
			+subtitle('Static width')
			+description
				p Add class <code class="fy-cd">fy-fx[1-12]</code> and column will have a static width 
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div class="fy-fx2">
								2 columns static width
							</div>
							<div class="fy-fxg ">
								Responsive column
							</div>
						</div>

						<div class="fy-fx">
							<div class="fy-fxg ">
								Responsive column
							</div>
							<div class="fy-fx2">
								2 columns static width
							</div>
						</div>	
				+code.
					<div class="fy-fx">
						<div class="fy-fx2">
							2 columns static width
						</div>
						<div class="fy-fxg ">
							Responsive column
						</div>
					</div>

					<div class="fy-fx">
						<div class="fy-fxg ">
							Responsive column
						</div>
						<div class="fy-fx2">
							2 columns static width
						</div>
					</div>

		


		//- spec
		+section
			+subtitle('Colum width responsive')
			+description
				p Add class <code class="fy-cd">fy-fx[1-12]@[s|m|l]</code> and column will have a static width 
			+properties([{'r':'fy-fx[1-12]@s','d':'Has an static width from 1 to 12 active when screen > 540px'},{'r':'fy-fx[1-12]@m','d':'Has an static width from 1 to 12 active when screen > 768px'},{'r':'fy-fx[1-12]@l','d':'Has an static width from 1 to 12 active when screen > 980px'}])
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div class="fy-fx2@m">
								fy-fx2@m > 768
							</div>
							<div class="fy-fxg ">
								Responsive column
							</div>
						</div>

						<div class="fy-fx">
							<div class="fy-fxg ">
								Responsive column
							</div>
							<div class="fy-fx2@m">
								fy-fx2@m > 768
							</div>
						</div>	
				+code.
					<div class="fy-fx">
						<div class="fy-fx2@m">
							fy-fx2@m > 768
						</div>
						<div class="fy-fxg ">
							Responsive column
						</div>
					</div>

					<div class="fy-fx">
						<div class="fy-fxg ">
							Responsive column
						</div>
						<div class="fy-fx2@m">
							fy-fx2@m > 768
						</div>
					</div>
				+open_example('grid-flex-column-responsive')


		//- spec
		+section
			+subtitle('Mix Colum width responsive')
			+description
				p Is posible to mix column size
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div class="fy-fx4@l fy-fx2@m">
								mix width
							</div>
							<div class="fy-fxg ">
								responsive column
							</div>
						</div>	
				+code.
					<div class="fy-fx">
						<div class="fy-fx4@l fy-fx2@m">
							mix width
						</div>
						<div class="fy-fxg ">
							responsive column
						</div>
					</div>


		//- spec
		+section
			+subtitle('Nested')
			+description
			+demo
				+example
					.example-grid-flex.
						<div class="fy-fx">
							<div>
								Parent
							</div>
							<div class="fy-fxg ">
								<div class="fy-fx">
									<div>
										Nested
									</div>
									<div class="fy-fxg ">
										Nested responsive content
									</div>
								</div>
							</div>
						</div>
				+code.
					<div class="fy-fx">
						<div>
							Parent
						</div>
						<div class="fy-fxg ">
							<div class="fy-fx">
								<div>
									Nested
								</div>
								<div class="fy-fxg ">
									Nested responsive content
								</div>
							</div>
						</div>
					</div>
