extends _layout.pug
include _mixins
block content
	article.fy-bx
		+title('Padding')
		+resume
			p Apply margin top and bottom to any element

		//- spec
		+section
			+subtitle('Usage')
			+description
			+demo
				+example.
					<div class="fy-pt10">
						 Lorem ipsum dolor sit amet, consectetur
					</div>
				+code.
					<div class="fy-pt10">
						 Lorem ipsum dolor sit amet, consectetur
					</div>
				+open_example('padding')

		//- spec
		+section
			+subtitle('Size')
